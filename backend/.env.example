NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/storymaps_competition
# Alternative individual MongoDB settings
# MONGODB_HOST=localhost
# MONGODB_PORT=27017
# MONGODB_NAME=storymaps_competition
# MONGODB_USER=
# MONGODB_PASS=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@storymaps-competition.com

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Application Configuration
API_VERSION=v1
LOG_LEVEL=debug
MAX_FILE_SIZE=5242880
MAX_SUBMISSIONS_PER_USER=5

# Security Configuration
BCRYPT_ROUNDS=12

# ArcGIS Configuration (if needed for server-side API calls)
ARCGIS_CLIENT_ID=your-arcgis-client-id
ARCGIS_CLIENT_SECRET=your-arcgis-client-secret

# Frontend URLs (for email links)
FRONTEND_URL=http://localhost:3000
EMAIL_VERIFICATION_URL=http://localhost:3000/verify-email
PASSWORD_RESET_URL=http://localhost:3000/reset-password

# Docker Configuration (optional)
DOCKER_DB_HOST=mongo
DOCKER_DB_PORT=27017